<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff000"
    tools:context="mx.edu.ittepic.proyectounidad2_zulmacoronel.AgregarCliente">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="131dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:text="AGREGAR CLIENTE"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/adesc"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:gravity="center"
        android:hint="NOMBRE"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/amontoo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:gravity="center"
        android:hint="DOMICILIO"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adesc" />

    <EditText
        android:id="@+id/ecelc"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="CELULAR"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amontoo" />

    <EditText
        android:id="@+id/adecripo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"

        android:ems="10"
        android:gravity="center"
        android:hint="CORREO"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ecelc" />

    <Button
        android:id="@+id/agregarc"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="AGREGAR"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="383dp" />

    <Button
        android:id="@+id/agregarcyo"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:gravity="center"
        android:text="AGREGAR CLIENTE Y OBRA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agregarc" />

</android.support.constraint.ConstraintLayout>
